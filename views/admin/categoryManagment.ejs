            <% for(let i=0;i<categoryinfo.length;i++){ %>
              <tr>
                <th scope="row"><%=i+1%></th>
                <td><%=categoryinfo[i].categoryName%></td>
                <td><%=categoryinfo[i].description%></td>
                <% if(categoryinfo[i].isListed){ %>
                  <td><button id="unlist<%i%>" onclick="fnList('<%=categoryinfo[i]._id %>')" type="button" class="btn btn-success">Unlist</button> </td>
                <% }else{ %>
                      <td><button id="list<%i%>" onclick="fnUnlist('<%=categoryinfo[i]._id %>')" type="button" class="btn btn-danger">List</button> </td>
                <% } %>
                <td>
