                                        title: "Category Edited"
                                    });
                                    window.location.reload();
                                } if(result.exists) {
                                    await Swal.fire({
                                        icon: "error",
                                        title: "Category Already Exists"
                                    }).then(()=>window.location.reload()) 
                                } if(result.noValue){
                                     await Swal.fire({
                                        icon: "error",
                                        title: "Give any value"
                                    }).then(()=>window.location.reload())
                                }
                  }
