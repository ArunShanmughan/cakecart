    <script>
      async function fnList(categoryId) {
          let response = await fetch(`/categoryunlist?id=${categoryId}`, {
              method: 'GET',
          })
          let result = await response.json()
          if (result.success) {
              await Swal.fire({
                  icon: "success",
                  title: "category listed",
              });
          }
          window.location.reload();
      }
  
      async function fnUnlist(categoryId) {
          let response = await fetch(`/categorylist?id=${categoryId}`, {
              method: 'GET',
          })
          let result = await response.json()
          if (result.success) {
              await Swal.fire({
                  icon: "error",
                  title: "User Unlisted",
                  confirmButtonText: "OK",
              });
          }
          window.location.reload();
      }
    </script>
    
    <script>
      jQuery.validator.addMethod("lettersonly", function(value, element) {
