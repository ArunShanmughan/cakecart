                aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" >
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Edit Category</h5>
                        </div>
                        <div class="modal-body">
                          <form id="editCategory<%=i%>">
                              <div class="form-outline mb-4">
                                <input type="text" placeholder="Category"
                                    value="<%=categoryinfo[i].categoryName %>" name="categoryNameEdit<%=i%>"
                                    id="categoryNameEdit" class="form-control" />
                              </div>

                                <div class="form-outline mb-4">
                                    <input type="text" placeholder="Category Description"
                                        value="<%=categoryinfo[i].description %>" name="categorydesEdit<%=i%>"
                                        id="categorydesEdit" class="form-control pb-5" />

                                </div>

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary"
                                        data-bs-dismiss="modal">Close</button>

                                    <button type="submit" class="btn btn-primary">Save
                                        changes</button>

                                </div>
                            </form>
                        </div>

                    </div>
                </div>
